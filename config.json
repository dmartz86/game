{
  "dburl": "mongodb://127.0.0.1/decktools",
  "site": "Deck App",
  "port": {
    "web": 1344,
    "api": 1345,
    "sio": 1346,
    "rds": 6379
  },
  "mandril":{
    "from": "noreply@wrine.co",
    "name": "Deck Tools",
    "token": ""
  },
  "TTL": 84000,
  "URL": {
    "BASE": "http://deck.wrine.co",
    "ACK": "/api/email/confirm/"
  },
  "APIVARS": {
    "PRE": "/",
    "ID": "/:id"
  },
  "views":[
    "groups",
    "roles",
    "tasks",
    "products"],
  "pages":[
    "account",
    "recover",
    "registered",
    "docs",
    "dev"],
  "resources": {
    "tokens": {
      "admin": true,
      "param": "token",
      "exclude": true
    },
    "settings": {
      "admin": false,
      "param": "setting",
      "exclude": true
    },
    "users": {
      "admin": true,
      "param": "user",
      "clean": {"password": 1},
      "schema": {
        "name":  1,
        "date": 1,
        "email": 1,
        "status": 1,
        "role": 1
      }
    },
    "groups": {
      "param": "group",
      "schema": {
        "name": 1
      }
    },
    "roles":  {
      "param": "role",
      "schema": {
        "name":  1,
        "readonly": 1,
        "resources": 1
      }
    },
    "tasks":  {
      "param": "task",
      "schema": {
        "name": 1
      }
    },
    "products":  {
      "param": "product",
      "schema": {
        "name": 1,
        "code": 1,
        "price": 1,
        "sizes": 1,
        "image": 1,
        "comments": 1
      }
    }
  }
}
